<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                    <li class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                            Lookup Tables
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                            <li role="presentation">@Html.ActionLink("FiscalYears", "Index", "FiscalYears", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("RiskLevels", "Index", "RiskLevels", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("Crises", "Index", "Crises", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("Services", "Index", "Services", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("Programs", "Index", "Programs", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("RiskStatuses", "Index", "RiskStatuses", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("AssignedWorkers", "Index", "AssignedWorkers", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("ReferralSources", "Index", "ReferralSources", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("ReferralContacts", "Index", "ReferralContacts", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("Incidents", "Index", "Incidents", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("AbuserRelationships", "Index", "AbuserRelationships", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("VictimOfIncidents", "Index", "VictimOfIncidents", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("FamilyViolenceFiles", "Index", "FamilyViolenceFiles", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("Ethnicities", "Index", "Ethnicities", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("Ages", "Index", "Ages", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("RepeatClients", "Index", "RepeatClients", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("DuplicateFiles", "Index", "DuplicateFiles", new { id = 1 }, new { role = "menuitem" })</li>
                            <li role="presentation">@Html.ActionLink("StatusOfFiles", "Index", "StatusOfFiles", new { id = 1 }, new { role = "menuitem" })</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
